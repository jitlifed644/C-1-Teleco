#include <stdio.h>
#include <math.h>
int main (){
  int base;
  int altura;
  float hipotenusa;
  float area;
  float perimetro;

  printf ("Dame la base: ");
  scanf ("%d", &base);
  printf ("Dame la altura: ");
  scanf ("%d", &altura);

  area=(base*altura)/2
    hipotenusa = sqrt((base²)+(altura²));
  perimetro = hipotenusa + base + altura;

    
  printf("Base: %5.2d cm", base);
  printf("Altura: %5.2d cm", altura);
  printf("Area: %5.2d cm x cm", area);
  printf("Perímetro: %5.2d cm", perimetro);
}
