#include <stdio.h>

int mai (){
  char respuesta
  printf ("Are you sure you want to close the app? (Y/N): \n");

  scanf ("%c" &respuesta);
  if (respuesta == (y || Y)){
    printf("You have chosen Yes \n");
  }
  else if(respuesta == (n || N)){
    printf("You have chosen No\n");
  }
  else {
    printf("You have to choose some valid answer.")
  }

  return 0;
}
